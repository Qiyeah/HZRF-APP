<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableLayout
            android:background="@color/tab_bg_light_blue"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2,3">
            <!--申请人、科室-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="申 请 人"
                    />

                <TextView
                    android:id="@+id/uname"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:text=""/>

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="所在科室"
                    />

                <TextView
                    android:id="@+id/dname"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:textSize="@dimen/tab_et_size"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--类型、婚否-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="请休假类型"
                    />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:textSize="@dimen/tab_et_size"/>

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="婚姻状态"
                    />


                <TextView
                    android:id="@+id/married"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:textSize="@dimen/tab_et_size"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--申请时间、天数-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="申请时间"
                    />

                <TextView
                    android:id="@+id/approvedate"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:clickable="false"
                    android:textSize="@dimen/tab_et_size"/>

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="请休假天数"
                    />

                <EditText
                    android:id="@+id/dayt"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:focusable="false"
                    android:textSize="@dimen/tab_et_size"
                    />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--起止时间-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="开始时间"
                    />

                <TextView
                    android:id="@+id/begindate"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:text="2018-10-1"
                    android:clickable="false"
                    android:textSize="@dimen/tab_et_size"/>

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="结束时间"
                    />

                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:clickable="false"
                    android:text=""
                    android:textSize="@dimen/tab_et_size"
                    />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--请休假事由-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="请休假事由"
                    />


                <RelativeLayout android:layout_span="3">
                    <TextView
                        android:id="@+id/reason"
                        android:layout_height="@dimen/tab_row_height1"
                        android:background="@drawable/shape_edit_bg"
                        android:text=""
                        android:textSize="@dimen/tab_et_size"
                        android:layout_width="match_parent"/>

                    <Button
                        android:id="@+id/bt_reason"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:paddingBottom="2dp"
                        android:text="填写事由"
                        android:textColor="#6495ED"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--附件列表-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="附件列表"
                    />


                <RelativeLayout android:layout_span="3"
                                android:background="@drawable/shape_edit_bg"
                    android:layout_height="@dimen/tab_row_height1">
                    <com.zhilian.hzrf_oa.ui.widget.NoScrollListView
                        android:id="@+id/fj_list"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:divider="#F5F5F5"
                        android:dividerHeight="1dip"
                        android:focusable="true"

                        android:focusableInTouchMode="true"/>

                    <Button
                        android:id="@+id/bt_update"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/fj_icon1"
                        android:paddingBottom="2dp"
                        android:text="附件上传"
                        android:textColor="#6495ED"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--审核意见-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="审核意见"
                    />

              <RelativeLayout android:layout_span="3">
                  <TextView
                      android:id="@+id/opinion1"
                      android:layout_height="@dimen/tab_row_height1"
                      android:background="@drawable/shape_edit_bg"
                      android:text=""
                      android:textSize="@dimen/tab_et_size"
                      android:layout_width="match_parent"/>

                  <Button
                      android:id="@+id/bt_opinion1"
                      android:layout_width="85dp"
                      android:layout_height="25dp"
                      android:background="@drawable/button_style2"
                      android:drawableLeft="@drawable/button2"
                      android:paddingBottom="2dp"
                      android:text="填写意见"
                      android:textColor="#6495ED"
                      android:paddingLeft="10dp"
                      android:textSize="12sp"
                      android:visibility="invisible"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
              </RelativeLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--审批意见-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="审批意见"
                    />

                <RelativeLayout android:layout_span="3">
                    <TextView
                        android:id="@+id/opinion2"
                        android:layout_height="@dimen/tab_row_height1"
                        android:background="@drawable/shape_edit_bg"
                        android:text=""
                        android:textSize="@dimen/tab_et_size"
                        android:layout_width="match_parent"/>

                    <Button
                        android:id="@+id/bt_opinion2"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:paddingBottom="2dp"
                        android:text="填写意见"
                        android:textColor="#6495ED"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>


            </TableRow>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--销假时间、实际天数-->
            <TableRow android:layout_marginTop="1dp">

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="销假时间"
                    />

                <TextView
                    android:id="@+id/backdate"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                   android:gravity="center"
                    android:textSize="@dimen/tab_et_size"/>

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/tab_bg_light_blue"
                    android:gravity="center"
                    android:text="实际天数"
                    />

                <TextView
                    android:id="@+id/days"
                    android:layout_width="@dimen/tab_col_width"
                    android:layout_height="@dimen/tab_row_height"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:textSize="@dimen/tab_et_size"
                    />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
            <!--按钮-->
            <TableRow android:layout_marginTop="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_span="4"
                    android:background="@android:color/transparent">


                    <Button
                        android:id="@+id/bt_save"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button3"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:text="保存"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="invisible"/>

                    <Button
                        android:id="@+id/bt_submit"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/point_right"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:text="提交"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:layout_height="match_parent">
                        <Button

                            android:id="@+id/bt_return"
                            android:layout_width="65dp"
                            android:layout_height="25dp"

                            android:layout_marginRight="5dp"
                            android:background="@drawable/button_red"
                            android:drawableLeft="@drawable/huitui"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:text="回退"
                            android:textColor="#ff0000"
                            android:textSize="12sp"
                            android:visibility="invisible"/>
                    </LinearLayout>

                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
        </TableLayout>

</ScrollView>
