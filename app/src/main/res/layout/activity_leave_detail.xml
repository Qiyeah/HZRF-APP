<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6495ED"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_left_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="请休假详情"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:stretchColumns="0,2,4,6">

                <TableRow android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="申 请 人" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/uname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical|left"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.2"
                        android:minHeight="30dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="所在科室" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/dname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="请休假类型" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"

                        android:ellipsize="end"
                        android:singleLine="true" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="婚姻状态" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/married"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="申请时间" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/approvedate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="请休假天数" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <EditText
                        android:id="@+id/dayt"
                        android:layout_width="0dp"
                        android:focusable="false"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_edit_bg"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="开始时间" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/begindate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="结束时间" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/enddate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />


                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="请休假事由" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minHeight="60dp" />

                        <Button
                            android:id="@+id/bt_reason"
                            android:layout_width="85dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_style2"
                            android:drawableLeft="@drawable/button2"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:text="填写意见"
                            android:textColor="#6495ED"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />


                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="文件列表" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4">

                        <com.zhilian.hzrf_oa.ui.widget.NoScrollListView
                            android:id="@+id/fj_list"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:descendantFocusability="blocksDescendants"
                            android:divider="#F5F5F5"
                            android:dividerHeight="1dip"
                            android:focusable="true"

                            android:focusableInTouchMode="true" />

                        <Button
                            android:id="@+id/bt_update"
                            android:layout_width="85dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/button_style2"
                            android:drawableLeft="@drawable/fj_icon1"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:text="附件上传"
                            android:textColor="#6495ED"
                            android:textSize="12sp"
                            android:visibility="invisible" />
                    </RelativeLayout>


                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />


                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="审核意见" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/opinion1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minHeight="60dp" />

                        <Button
                            android:id="@+id/bt_opinion1"
                            android:layout_width="85dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/opinion1"
                            android:background="@drawable/button_style2"
                            android:drawableLeft="@drawable/button2"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:text="填写意见"
                            android:textColor="#6495ED"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </TableRow>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:singleLine="false"
                        android:text="审批意见" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/opinion2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"

                            android:minHeight="80dp" />

                        <Button
                            android:id="@+id/bt_opinion2"
                            android:layout_width="85dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/opinion2"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/button_style2"
                            android:drawableLeft="@drawable/button2"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:text="填写意见"
                            android:textColor="#6495ED"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="销假时间" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/backdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"

                        android:ellipsize="end"
                        android:singleLine="true" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F1F9FF"
                        android:gravity="center"
                        android:text="实际天数" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC" />

                    <TextView
                        android:id="@+id/days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DCDCDC" />
            </TableLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/record"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_style1"
            android:drawableLeft="@drawable/button1"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="记录"
            android:textColor="#696969"
            android:textSize="12sp" />



        <Button
            android:id="@+id/bt_save"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/receiver"
            android:layout_toStartOf="@+id/receiver"
            android:background="@drawable/button_style2"
            android:drawableLeft="@drawable/button3"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="保存"
            android:textColor="#6495ED"
            android:textSize="12sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_return"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/submit"
            android:layout_toStartOf="@+id/submit"
            android:background="@drawable/button_red"
            android:drawableLeft="@drawable/huitui"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="回退"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/submit"
            android:layout_toStartOf="@+id/submit"
            android:background="@drawable/button_style2"
            android:drawableLeft="@drawable/point_right"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="提交"
            android:textColor="#6495ED"
            android:textSize="12sp"
            android:visibility="visible" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>