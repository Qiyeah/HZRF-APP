<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6495ED"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_left_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="请休假详情"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text=" 申 请 人 "
                    android:layout_width="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/uname"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text=""
                    android:layout_width="0dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text="所在科室"
                    android:layout_width="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/dname"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text=""
                    android:layout_width="0dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 类型、申请时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text="申请时间"
                    android:layout_width="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/approvedate"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text=""
                    android:clickable="false"
                    android:layout_width="0dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text="外出类型"
                    android:layout_width="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 开始时间、结束时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="开始时间" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/begindate"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text=""
                    android:clickable="false"
                    android:layout_width="0dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="结束时间" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/enddate"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:text=""
                    android:clickable="false"
                    android:layout_width="0dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 外出天数-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="外出天数" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/sp_dayt_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:entries="@array/apply_dayt_type"></Spinner>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                   />
                <EditText
                    android:id="@+id/dayt"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:background="@drawable/shape_edit_bg"
                    android:visibility="invisible"
                    android:text="0.5"
                    android:layout_width="0dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                   />
                <TextView
                    android:id="@+id/dayt_unit"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:gravity="center_vertical"
                    android:visibility="invisible"
                    android:text="天"
                    android:layout_width="0dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />

            <!-- 外出事由-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="外出事由" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:minHeight="60dp"
                    android:layout_weight="3">

                    <TextView
                        android:minHeight="60dp"
                        android:id="@+id/reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />

                    <Button
                        android:id="@+id/bt_reason"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:text="填写事由"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 审核意见-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="审核意见" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/opinion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:inputType="textMultiLine"
                        android:minHeight="60dp" />


                    <Button
                        android:id="@+id/bt_opinion1"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:text="填写意见"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!--审批意见-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="审批意见" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/opinion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minHeight="60dp" />

                    <Button
                        android:id="@+id/bt_opinion2"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:text="填写意见"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/record"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_style1"
            android:drawableLeft="@drawable/button1"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="记录"
            android:textColor="#696969"
            android:visibility="gone"
            android:textSize="12sp" />


        <Button
            android:id="@+id/bt_submit"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_style2"
            android:drawableLeft="@drawable/point_right"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="提交"
            android:textColor="#6495ED"
            android:textSize="12sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_return"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/record"
            android:background="@drawable/button_red"
            android:drawableLeft="@drawable/huitui"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="回退"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_save"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bt_submit"
            android:layout_toRightOf="@+id/bt_submit"
            android:background="@drawable/button_style2"
            android:drawableLeft="@drawable/button3"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="保存"
            android:textColor="#6495ED"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>